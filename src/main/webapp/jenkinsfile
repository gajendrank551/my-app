pipeline{
    agent any

triggers {
    pollSCM '* * * * * '
  }
    stages {
        stage('CLONE') {
            steps {
                 git branch: 'main' , url: 'https://github.com/gajendrank551/my-app.git' 
            }
        }
        stages {
            stage('CLEAN') {
                steps {
                    sh 'mvn clean'
                } 
            }
            stages {
            stage('TEST') {
                steps {
                    sh 'mvn test'
                } 
            }
            stages {
            stage('BUILD') {
                steps {
                    sh 'mvn build'
                } 
            }
            stages {
            stage('archiveArtifacts') {
                steps {
                    archive archiveArtifacts: 'target/app.war' followSymlinks: false
'               } 
            }

